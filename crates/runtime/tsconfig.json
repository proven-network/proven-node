{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["deno"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
